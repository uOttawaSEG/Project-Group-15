<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".div4.StudentDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#6750A4">
            <TextView
                android:id="@+id/fullName"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="20sp"
                android:gravity="start"
                android:padding = "10dp" />

            <TextView
                android:id="@+id/email"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="20sp"
                android:gravity="start"
                android:padding = "10dp"
                android:layout_width="0dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="100dp"
            android:onClick="sessionRegistrationHandler"
            android:text="Session Registration" />

        <Button
            android:id="@+id/button2"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Student Requests" />

        <Button
            android:id="@+id/button3"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Past Sessions" />

        <Button
            android:id="@+id/button4"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Upcoming sessions" />

        <Button
            android:id="@+id/button5"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Delete sessions" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>